<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5.2" />
    </startup>
  
  <connectionStrings>
    <!--Make sure to change data source to the name of your local database server. Use Activity12Invoices_script.sql to create this database-->
    <add name="InvoiceConnection" connectionString="Data Source=.;Initial Catalog=Activity12Invoices;Integrated Security=True"/>
  </connectionStrings>

  <appSettings>
    <add key="databaseErrorMessage" value="An error occured when trying to connect to the database"/>
  </appSettings>
  
</configuration>